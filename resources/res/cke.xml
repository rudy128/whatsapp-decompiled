<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="0x7f060138"/>
                    <corners android:topLeftRadius="4dp" android:topRightRadius="4dp"/>
                </shape>
            </item>
            <item android:left="-3dp" android:top="-3dp" android:right="-3dp">
                <shape>
                    <stroke android:width="2dp" android:color="0x7f060a1f"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <solid android:color="0x7f0602d2"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
